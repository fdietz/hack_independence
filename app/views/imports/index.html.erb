<div class="background-image">
  <div class="row">
    <div class="large-12 columns">

      <h1 class="canvas red">Import your playlist from</h1>

      <div class="row">

        <div class="large-6 columns">
          <%= link_to "/auth/spotify" do %>
            <div class="provider-box">
              <%= image_tag("spotify-logo3.png", width: 250) %>
            </div>
          <% end %>
        </div>

        <div class="large-6 columns">
          <%= link_to import_path("rdio") do %>
            <div class="provider-box">
              <%= image_tag("rdio-symbol.png", width: 250) %>
            </div>
          <% end %>
        </div>

      </div>

    </div>
  </div>
</div>
